#!/bin/bash
set -euo pipefail

set_production_server() {
    BACKEND_PUBLIC_FOLDER="./backend/public"

    build_frontend $FRONTEND_STATIC_SITE

    mkdir -p $BACKEND_PUBLIC_FOLDER
    cp -R $FRONTEND_STATIC_SITE/. $BACKEND_PUBLIC_FOLDER
}

echo "DIST FOLDER $FRONTEND_STATIC_SITE"
ls -lha

set_production_server

ls -lha ./backend/public
